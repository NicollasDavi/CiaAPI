generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  matricula Int @id
  nome String
  senha String
  admin Boolean @default(false)
  isN Boolean @default(false)
  token String
  isAuth Boolean
}

model Setores{
  codigo Int @id
  nome String
  informacoes String
  unidades String
  horario String
  responsavel String
  contato String
}

model Curso{
  id String @id @default(uuid()) @map(name: "id")
  matricula Int
  nome String
  unidade String
  turno String
  informacao String
  valor_E Float
  valor_M Float
  contra_T String
  integral String
  imagem String
}

model Professores{
  nome String @id
  materia String
  tit String
  foto String
}

model Unidades{
  codigo String @id
  nome String
  informacoes String
  vcep String
  numeroTel String
  numeroWpp String
  horario String
}
